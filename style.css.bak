.flex-container {
  display: flex;
  justify-content: center;
}

.flex-container > div {
  cursor:pointer;
  background-color: #f1f1f1;
  width: 200px;
  margin: 10px;
  height:200px;
  text-align: center;
  line-height: 75px;
  font-size: 19px;
  border-radius:10px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.flex-containersemaine {
  display: flex;
  justify-content: center;
}

